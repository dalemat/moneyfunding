{
    "name": "cryptofund/erc20-money",
    "description": "ERC20 token funding system for Flarum",
    "keywords": ["flarum", "extension", "erc20", "cryptocurrency", "ethereum"],
    "type": "flarum-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "CryptoFund",
            "email": "dev@cryptofund.com"
        }
    ],
    "require": {
        "flarum/core": "^1.0.0",
        "guzzlehttp/guzzle": "^7.0",
        "web3p/web3.php": "^0.1.0"
    },
    "autoload": {
        "psr-4": {
            "CryptoFund\\ERC20Money\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "ERC20 Money",
            "category": "feature",
            "icon": {
                "name": "fas fa-coins",
                "backgroundColor": "#e74c3c",
                "color": "#fff"
            }
        }
    }
}
